# Porta em que a aplicação vai rodar
PORT=3000

# --- Configuração do Oracle Instant Client ---
# Caminho para a pasta do Oracle Instant Client
ORACLE_LIB_DIR=/path/to/your/instantclient

# --- Configuração do Banco de Dados (TypeORM) ---
DB_TYPE=oracle
DB_HOST=localhost
DB_PORT=1521
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password
DB_DATABASE=your_db_sid_or_service_name

# Carrega as entidades automaticamente (recomendado: true)
DB_AUTOLOADENTITIES=true

# Sincroniza o schema do banco de dados com as entidades
DB_SYNCHRONIZE=false

# Habilita o log de queries e erros do TypeORM
DB_LOGGING=true
